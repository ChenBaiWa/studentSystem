<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studentsystem.mapper.SysUserMapper">

    <resultMap id="SysUserResultMap" type="com.studentsystem.entity.SysUser">
        <id property="id" column="id" />
        <result property="userRole" column="user_role" />
        <result property="phone" column="phone" />
        <result property="password" column="password" />
        <result property="realName" column="real_name" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.studentsystem.entity.SysUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user (user_role, phone, password, real_name, create_time)
        VALUES (#{userRole}, #{phone}, #{password}, #{realName}, #{createTime})
    </insert>

    <!-- 根据手机号统计用户数量 -->
    <select id="countByPhone" resultType="int" parameterType="String">
        SELECT COUNT(*) FROM sys_user WHERE phone = #{phone}
    </select>

    <!-- 根据ID查询用户 -->
    <select id="selectById" resultMap="SysUserResultMap" parameterType="int">
        SELECT * FROM sys_user WHERE id = #{id}
    </select>

    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultMap="SysUserResultMap" parameterType="String">
        SELECT * FROM sys_user WHERE phone = #{phone}
    </select>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.studentsystem.entity.SysUser">
        UPDATE sys_user
        SET user_role = #{userRole},
            phone = #{phone},
            password = #{password},
            real_name = #{realName},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM sys_user WHERE id = #{id}
    </delete>

    <!-- 查询所有用户 -->
    <select id="selectAll" resultMap="SysUserResultMap">
        SELECT * FROM sys_user
    </select>

</mapper>